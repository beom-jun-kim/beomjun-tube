extends base

block content
    div.record__screen
        video#preview
        button#actionBtn
            span.record___circle
            span.actionBtn 녹화하기
    if errorMessage
        span = errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") 비디오 파일
        input(type="file" id="video" name="video" accept="video/*" required)
        label(for="thumb") 썸네일 파일
        input(type="file" id="thumb" name="thumb" accept="image/*" required)
        input(placeholder="Title", required, type="text" name="title")
        input(placeholder="Description", required, type="text" name="description")
        input(placeholder="Hashtags, separated by comma.", required, type="text" name="hashtags")
        input(type="submit" value="Upload Video")

block scripts
    script(src="/static/js/recorder.js")