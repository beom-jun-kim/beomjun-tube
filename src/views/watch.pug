extends base

block content
    div#videoContainer

        //- video로 변수가 선언이 되어있다 : videoControllers.js 에서 const video = await movieModel.findById(id);
        video(src="/" + video.fileUrl)
        div#videoControls
            button#play Play
            button#mute Mute
            div
                span#currenTime 00:00
                span  / 
                span#totalTime 00:00
            input(type="range", step="0.1", min="0", max="1")#volume

        div
            input(type="range", step="1", value=0, min="0")#timeline

        div
            button#fullScreenBtn Enter Full Screen

    div
        p=video.descriptionfileUrl
        small=video.createdAt
    div 
        small 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}님이 업로드 하셨습니다
    if String(video.owner._id) === String(loggedInUser._id)
        br
        a(href=`${video.id}/edit`) Edit Video →
        br
        a(href=`${video.id}/delete`) Delete Video →

