extends base

block content
    div#videoContainer(data-id=video._id)

        //- video로 변수가 선언이 되어있다 : videoControllers.js 에서 const video = await movieModel.findById(id);
        video(src="/" + video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currenTime 00:00
                    span.videoControls__time_bar /  
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1" min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand

    div
        p=video.descriptionfileUrl
        small=video.createdAt
    div 
        h4.video_title #{video.title}
        small 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}님이 업로드 하셨습니다
    if String(video.owner._id) === String(loggedInUser._id)
        br
        a(href=`${video.id}/edit`) Edit Video →
        br
        a(href=`${video.id}/delete`) Delete Video →

