extends base
include mixins/video

block content

    div.profile__data
        img(src=user.avatarUrl ).avatar
        h3=user.name
        
    div.video-grid

        //- userController.js에 see 컨트롤러에서 user로 video array를 보내주고 있기에
        each video in user.videos
            +video(video)
        else
            span.empty__message 비디오를 찾지 못했습니다
    hr
    br
    if loggedIn
        p 
            a(href="/users/edit-profile") 프로필 편집