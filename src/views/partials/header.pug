header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav 
        ul 
            li
                a(href="/search")
                    i.fas.fa-search

            if loggedIn
                li
                    a(href="/videos/upload") 영상 업로드
                li
                    a(href="/users/logout") 로그아웃
                li
                    a(href=`/users/${loggedInUser._id}`) 
                        if !loggedInUser.avatarUrl
                            span #{loggedInUser.name}의 프로필
                        else
                            //- if loggedInUser.avatarUrl.includes("github")
                            img.header__avatar(src=loggedInUser.avatarUrl)
            else
                li
                    a(href="/login") 로그인
                li
                    a(href="/join").header__btn 가입하기