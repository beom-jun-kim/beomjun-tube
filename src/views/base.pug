doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
        link(rel="stylesheet", href="/static/css/styles.css")
    body 
        header

            //- =을 쓰면 text가 아닌 변수로 인식 , 하나의 변수만 넣는경우
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") 홈
                    li
                        a(href="/search") 검색

                    if loggedIn
                        li
                            a(href="/videos/upload") 영상 업로드
                        li
                            a(href=`/users/${loggedInUser._id}`) #{loggedInUser.name}의 프로필
                        li
                            a(href="/users/logout") 로그아웃
                    else
                        li
                            a(href="/login") 로그인
                        li
                            a(href="/join") 가입하기
        main
            block content
        include partials/footer
        script(src="/static/js/main.js")
